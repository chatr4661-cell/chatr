<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/call_background_gradient" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Caller Avatar -->
        <ImageView
            android:id="@+id/callerAvatarImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/avatar_circle"
            android:scaleType="centerCrop"
            android:contentDescription="Caller avatar" />

        <!-- Caller Name -->
        <TextView
            android:id="@+id/callerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Unknown"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Call Type -->
        <TextView
            android:id="@+id/callTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ðŸ“ž Incoming Voice Call"
            android:textColor="#B0B0B0"
            android:textSize="16sp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="60dp">

            <!-- Reject Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="60dp">

                <ImageButton
                    android:id="@+id/rejectButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/button_reject"
                    android:src="@drawable/ic_call_end"
                    android:scaleType="center"
                    android:contentDescription="Reject call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Decline"
                    android:textColor="#FF5252"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Answer Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/answerButton"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/button_answer"
                    android:src="@drawable/ic_call"
                    android:scaleType="center"
                    android:contentDescription="Answer call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Accept"
                    android:textColor="#4CAF50"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
