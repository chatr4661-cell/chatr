<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Add these entries to your Info.plist for Health and Contacts permissions -->
	
	<!-- Bluetooth Permissions -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>This app uses Bluetooth to chat with nearby users without internet</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>This app uses Bluetooth to discover and chat with nearby Chatr users</string>
	
	<!-- Health Kit Usage -->
	<key>NSHealthShareUsageDescription</key>
	<string>chatr needs access to read your health data to track and sync wellness metrics like steps, heart rate, and sleep patterns.</string>
	
	<key>NSHealthUpdateUsageDescription</key>
	<string>chatr would like to save wellness data to Apple Health for better health tracking.</string>
	
	<!-- Contacts Usage -->
	<key>NSContactsUsageDescription</key>
	<string>chatr needs access to your contacts to help you find friends and sync your phonebook.</string>
	
	<!-- Motion & Fitness -->
	<key>NSMotionUsageDescription</key>
	<string>chatr needs access to your motion data to track daily steps and activity.</string>
	
	<!-- Required Device Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>healthkit</string>
		<string>bluetooth-le</string>
	</array>
</dict>
</plist>
