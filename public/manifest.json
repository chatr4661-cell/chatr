    },
    {
      "src": "/chatr-logo.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/chatr-logo.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Chatr messaging interface"
    },
    {
      "src": "/chatr-logo.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Chatr mobile app"
    }
  ],
  "categories": ["social", "health", "medical", "lifestyle", "communication"],
  "shortcuts": [
    {
      "name": "New Message",
      "short_name": "Message",
      "description": "Start a new conversation",
      "url": "/chat",
      "icons": [{ "src": "/chatr-logo.png", "sizes": "192x192" }]
    },
    {
      "name": "Video Call",
      "short_name": "Call",
      "description": "Start a video call",
      "url": "/chat",
      "icons": [{ "src": "/chatr-logo.png", "sizes": "192x192" }]
    },
    {
      "name": "Health Passport",
      "short_name": "Health",
      "description": "Access your health records",
      "url": "/health-passport",
      "icons": [{ "src": "/chatr-logo.png", "sizes": "192x192" }]
    },
    {
      "name": "Emergency",
      "short_name": "SOS",
      "description": "Access emergency services",
      "url": "/emergency",
      "icons": [{ "src": "/chatr-logo.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/chat",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/lab-reports",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png"]
      },
      "icons": [{ "src": "/chatr-logo.png", "sizes": "192x192" }],
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+chatr",
      "url": "/chat?url=%s"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "display_override": ["window-controls-overlay", "tabbed", "standalone"],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "widgets": [
    {
      "name": "Quick Message",
      "short_name": "Message",
      "description": "Send a quick message",
      "tag": "quick-message",
      "template": "quick-message-template",
      "ms_ac_template": "widgets/message-widget.json",
      "data": "widgets/message-data.json",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/chatr-logo.png",
          "sizes": "600x400",
          "label": "Quick message widget"
        }
      ],
      "icons": [
        {
          "src": "/chatr-logo.png",
          "sizes": "192x192"
        }
      ],
      "auth": false,
      "update": 86400
    },
    {
      "name": "Health Status",
      "short_name": "Health",
      "description": "View your health status",
      "tag": "health-status",
      "template": "health-status-template",
      "ms_ac_template": "widgets/health-widget.json",
      "data": "widgets/health-data.json",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/chatr-logo.png",
          "sizes": "600x400",
          "label": "Health status widget"
        }
      ],
      "icons": [
        {
          "src": "/chatr-logo.png",
          "sizes": "192x192"
        }
      ],
      "auth": true,
      "update": 3600
    }
  ],
  "note_taking": {
    "new_note_url": "/chat?note=new"
  },
  "scope_extensions": [
    {
      "origin": "https://*.chatr.app"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=app.lovable.chatr",
      "id": "app.lovable.chatr"
    }
  ],
  "prefer_related_applications": false
}
